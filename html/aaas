                function finalizarPedido() {
            const nome = document.getElementById('nome').value;
            const endereco = document.getElementById('endereco').value;
            const horario = document.getElementById('horario').value;
            const pagamento = document.getElementById('pagamento').checked ? 'Pago' : 'Não Pago';
            const retirada = document.querySelector('input[name="retirada"]:checked')?.value;
            const frango = document.getElementById('frango').checked ? 'Sim' : 'Não';
            const maionese = document.getElementById('maionese').checked ? 'Sim' : 'Não';
            const polenta = document.getElementById('polenta').checked ? 'Sim' : 'Não';

            if (!nome || !retirada) {
                alert("Por favor, preencha o nome e selecione a forma de retirada.");
                return;
            }

            const status = retirada === "entrega" ? "entregue" : "retirado";

            // Cria o elemento do pedido
            const pedido = document.createElement('li');
            pedido.className = status; // Define a classe com base no status
            pedido.innerHTML = `
                <strong>Nome:</strong> ${nome} <br>
                <strong>Endereço:</strong> ${endereco || 'N/A'} <br>
                <strong>Horário:</strong> ${horario || 'N/A'} <br>
                <strong>Pagamento:</strong> ${pagamento} <br>
                <strong>Retirada:</strong> ${retirada} <br>
                <strong>Frango:</strong> ${frango}, Maionese: ${maionese}, Polenta: ${polenta}
            `;

            // Adiciona o pedido à lista
            document.getElementById('listaPedidos').appendChild(pedido);

            // Limpa os campos
            document.getElementById('nome').value = '';
            document.getElementById('endereco').value = '';
            document.getElementById('horario').value = '';
            document.getElementById('pagamento').checked = false;
            document.querySelectorAll('input[name="retirada"]').forEach(el => el.checked = false);
            document.getElementById('frango').checked = false;
            document.getElementById('maionese').checked = false;
            document.getElementById('polenta').checked = false;
        }

        function filtrarPedidos(status) {
            const pedidos = document.querySelectorAll('#listaPedidos li');

            pedidos.forEach(pedido => {
                if (status === 'todos') {
                    pedido.style.display = 'block'; // Mostra todos os pedidos
                } else if (pedido.className === status) {
                    pedido.style.display = 'block'; // Mostra apenas os pedidos do status selecionado
                } else {
                    pedido.style.display = 'none'; // Esconde os demais
                }
            });
        }

        function limparPedidos() {
            const confirma = confirm("Tem certeza que deseja limpar todos os pedidos?");
            if (confirma) {
                document.getElementById('listaPedidos').innerHTML = '';
            }
        }